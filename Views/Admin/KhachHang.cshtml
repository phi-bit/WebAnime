@model IEnumerable<WebAnime.Models.KhachHang>

@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thông Tin Tài Khoản Khách Hàng</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "Themmoikhachhang")
</p>
<table class="table">
    <tr>
        <th>
            Họ và tên:
        </th>
        <th>
            Tài khoản:
        </th>
        <th>
            Mật khẩu:
        </th>
        <th>
            Email:
        </th>
        <th>
            Địa chỉ:
        </th>
        <th>
            Điện thoại:
        </th>
        <th>
            Ngày sinh:
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Taikhoan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Matkhau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiachiKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienthoaiKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaysinh)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Suakhachhang", new { id=item.MaKH }) |
            @Html.ActionLink("Chi tiết", "Chitietkhachhang", new { id=item.MaKH }) |
            @Html.ActionLink("Xóa", "Xoakhachhang", new { id=item.MaKH })
        </td>
    </tr>
}

</table>
